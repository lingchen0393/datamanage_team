<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>MHFS</display-name>
	<welcome-file-list>
		<welcome-file>start.html</welcome-file>
	</welcome-file-list>

	<filter>
		<filter-name>BasicFilter</filter-name>
		<filter-class>com.mhfs.filter.BasicFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>BasicFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>com.mhfs.filter.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/sys/home.jsp</url-pattern>
		<url-pattern>/system/FilServlet</url-pattern>
	</filter-mapping>
	
</web-app>